<h1> Mountains </h1>
<p><%= link_to 'Add New Mountain', new_mountain_path %></p>


  <div class="row">
    <% @mountains.each do |mountain| %>
    <div class="col s12 m4">
      <div class="card">
        <div class="card-image">
          <img src=<%= image_path('<%= #{mountain.name}%>.jpg') %> />
          <span class="card-title"><%= mountain.name %></span>
          <a class="btn-floating halfway-fab waves-effect waves-light blue right">
          <i class="material-icons right">add<%= link_to " ", mountain_path(mountain) %></i></a>
        </div>
      </div>
    </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col s12 m3">
      <div class="card">
        <div class="card-image" > 
          <img src=<%= image_path('Everest.jpg') %> />
         <span class="card-title">Card Title</span>
          <a class="btn-floating halfway-fab waves-effect waves-light red right"><i class="material-icons right">add</i></a>
        </div>
        
        
      </div>
    </div>
  </div>