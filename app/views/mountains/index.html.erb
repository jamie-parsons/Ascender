<h1> Mountains </h1>
<p><%= link_to 'Add New Mountain', new_mountain_path %></p>


  <div class="row">
    <% @mountains.each do |mountain| %>
    <div class="col s12 m4">
      <div class="card">
        <div class="card-image">
          <img src=<%= image_path('Everest.jpg') %> />
          <span class="card-title"><%= mountain.name %></span>
          <a class="btn-floating halfway-fab waves-effect waves-light red">
          <i class="material-icons"><%= link_to 'Show Mountain', mountain_path(mountain) %></i></a> 
        </div>
      </div>
    </div>
    <% end %>
  </div>

